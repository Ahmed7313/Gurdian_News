<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height">

            <ImageView
                android:id="@+id/article_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:scaleType="centerCrop"
                tools:src="@drawable/zeman2" />

            <TextView
                android:id="@+id/article_section_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/section_padding"
                android:paddingTop="@dimen/section_padding"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                tools:text="Technology" />

            <TextView
                android:id="@+id/article_author_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/article_title_text_view"
                android:paddingLeft="@dimen/author_padding_left"
                android:textColor="@color/colorWhite"
                tools:text="By Martina Adamusova" />

            <TextView
                android:id="@+id/article_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/date_padding"
                android:textColor="@color/colorWhite"
                tools:text="12.3.2018" />

            <TextView
                android:id="@+id/article_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/title_padding"
                android:paddingLeft="@dimen/title_padding"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_font_size"
                android:textStyle="bold"
                tools:text="Dukovi do programu prezidenta nic není, řekl Nově Zeman" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>